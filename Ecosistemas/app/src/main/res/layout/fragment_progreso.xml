        app:layout_constraintStart_toStartOf="@+id/img_tarjeta2_perfil"
        app:layout_constraintTop_toTopOf="@+id/img_tarjeta2_perfil"></TextView>

    <ProgressBar
        android:id="@+id/pb_visual_perfil"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="284dp"
        android:layout_height="20dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="@+id/img_tarjeta1_perfil"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/img_tarjeta1_perfil"
        app:layout_constraintTop_toTopOf="@+id/img_tarjeta1_perfil"></ProgressBar>

    <TextView
        android:id="@+id/tv_porcentajevisual_fragmento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_regular"
        android:text="0%"
        android:textColor="@color/Black"
        app:layout_constraintBottom_toTopOf="@+id/pb_visual_perfil"
        app:layout_constraintEnd_toEndOf="@+id/img_tarjeta1_perfil"
        app:layout_constraintStart_toStartOf="@+id/img_tarjeta1_perfil" />

